    <h3>User Details</h3>
    <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="col-md-3"><%= form.label :firstname, class: "required" %></div>
        <div class="col-md-6"><%= form.text_field :firstname, id: :user_firstname, :required => true %></div>
