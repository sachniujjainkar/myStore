    <div class="row">
      <div class="col-md-6">
        <div class="col-md-3"><%= form.label :email, class: "required" %></div>
        <div class="col-md-6"><%= form.email_field :email, id: :user_email, :required => true %></div>
      </div>

      <div class="col-md-6">
        <div class="col-md-3"><%= form.label :contact, class: "required" %></div>
        <div class="col-md-6"><%= form.text_field :contact, id: :user_contact, :required => true %></div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <div class="col-md-3"><%= form.label :birthdate, class: "required" %></div>
        <div class="col-md-6"><%= form.date_select :birthdate, id: :user_birtdate, :start_year => Date.current.
      year, :end_year => 1991, :required => true %></div>
      </div>
      <div class="col-md-6">
        <div class="col-md-3"><%= form.label :password, class: "required" %></div>
        <div class="col-md-6"><%= form.password_field :password_digest, id: :user_password_digest%></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="col-md-3"><%= form.label :Role, class: "required" %></div>
        <div class="col-md-6"><%= form.check_box :role, id: :user_role %></div>
      </div>
    </div>
    
